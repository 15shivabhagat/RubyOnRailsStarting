<h1>Article Listning Page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Delete', article_path(article), method: :delete %></td>
            </tr>
        <% end %>
    <tbody>
    </tbody>
</table>